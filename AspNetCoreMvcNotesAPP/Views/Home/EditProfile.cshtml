@{
    ViewData["Title"] = "Profil Düzenle";
}
<h1>@ViewData["Title"]</h1>

<hr />

<div class="row pt-4">
    <div class="col-3">
        <img class="img-thumbnail rounded-circle mx-auto d-block" src="https://picsum.photos/id/1005/128" />
        <form class="mt-2 text-center" method="post">
            <div class="row">
                <div class="col-10 offset-1">
                    <input type="file" class="form-control" />
                    <p><small>Lütfen sadece resim dosyası seçiniz(jpeg,jpg,png)</small></p>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary"><i class="fas fa-upload me-2"></i>Yükle</button>
                </div>
            </div>


        </form>
    </div>
    <div class="col-6 mb-5">
        <h5>Bilgileri Güncelle</h5>
        <hr />
        <form method="post">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input type="text" class="form-control" placeholder="Username" />
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                <input type="text" class="form-control" placeholder="Firstname" />
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                <input type="text" class="form-control" placeholder="Lastname" />
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Kaydet</button>
            </div>
        </form>

        <h5>Şifreleri Güncelle</h5>
        <hr />
        <form method="post">

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <input type="password" class="form-control" placeholder="Password" />
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <input type="password" class="form-control" placeholder="Re-password" />
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Kaydet</button>
            </div>
        </form>
    </div>
</div>